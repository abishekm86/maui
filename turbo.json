{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "preview": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },
    "watch": {
      "cache": false,
      "persistent": true
    }
  }
}
